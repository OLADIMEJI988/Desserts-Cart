document.addEventListener("DOMContentLoaded", function () {
    // Select all toggle containers
    const toggleContainers = document.querySelectorAll(".toggle");

    toggleContainers.forEach((container) => {
        const button = container.querySelector(".toggleButton");
        const content = container.querySelector(".content");
        const active = container.querySelector(".active");
        const selected = document.getElementById("selected");

        // Initialize state
        let isActive = false;

        button.addEventListener("click", function () {
            if (!isActive) {
                // Hide any previously active content
                document.querySelectorAll(".content").forEach((otherContent) => {
                    if (otherContent !== content) {
                        otherContent.classList.remove("flex");
                        otherContent.classList.add("hidden");
                    }
                });

                document.querySelectorAll(".toggleButton").forEach((otherButton) => {
                    if (otherButton !== button) {
                        otherButton.classList.remove("hidden");
                    }
                });

                // Show the current content and hide the button
                content.classList.remove("hidden");
                content.classList.add("flex");
                button.classList.add("hidden");
                selected.classList.add("border-[3px]", "border-solid", "img-border-color");

                isActive = true;
            }
        });

        active.addEventListener("click", function () {
            if (isActive) {
                // Hide the current content and show the button
                content.classList.remove("flex");
                content.classList.add("hidden");
                button.classList.remove("hidden");
                selected.classList.remove("border-[3px]", "border-solid", "img-border-color");

                isActive = false;
            }
        });
    });
});



document.addEventListener("DOMContentLoaded", function () {
    // Select all toggle containers
    const toggleContainers = document.querySelectorAll(".toggle");

    toggleContainers.forEach((container) => {
        const button = container.querySelector(".toggleButton");
        const content = container.querySelector(".content");
        const active = container.querySelector(".active");
        const selected = document.getElementById("selected");

        button.addEventListener("click", function () {
            // Show the content and hide the button
            content.classList.remove("hidden");
            content.classList.add("flex");
            button.classList.add("hidden");
            selected.classList.add("border-[3px]", "border-solid", "img-border-color");
        });

        active.addEventListener("click", function () {
            // Hide the content and show the button
            content.classList.remove("flex");
            content.classList.add("hidden");
            button.classList.remove("hidden");
            selected.classList.remove("border-[3px]", "border-solid", "img-border-color");
        });
    });
});